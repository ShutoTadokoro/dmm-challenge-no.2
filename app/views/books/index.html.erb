<div class="destroy">
  <%= flash[:destroy] %>
</div>
<div class="index_tables">
  <h1>Books</h1>
  <table>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

    <% @books.each do |book| %>
      <tr>
        <td class="data_row"><%= book.title %></td>
        <td class="data_row"><%= book.body %></td>
        <td class="data_row"><%= link_to "Show", book_path(book.id), class: "botton" %></td>
        <td class="data_row"><%= link_to "Edit", edit_book_path(book.id), class: "botton" %></td>
        <td class="data_row"><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?", class: "botton" %></td>
      </tr>
    <% end %>
  </table>
</div>

<div class="create_book">
  <h2>New book</h2>
  <% if @book.errors.any? %>
    <div class="error_pop">
      <% if @book.errors.count==1 %>
        <p class="error_p"><%= @book.errors.count %>&nbsp;error prohibited this book from being saved:</p>
      <% else %>
        <p class="error_p"><%= @book.errors.count %>&nbsp;errors prohibited this book from being saved:</p>
      <% end %>
      <ul class="error_ul">
        <% @book.errors.full_messages.each do |message| %>
          <li class="error_li"><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with model: @book do |f| %>
    <div class="create_p">
      <p>Title</p>
      <%= f.text_field :title %>
    </div>
    <div class="create_p">
      <p>Body</p>
      <%= f.text_area :body %>
    </div>
    <%= f.submit 'Create Book' %>
  <% end %>
</div>